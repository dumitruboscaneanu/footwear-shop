@model ShoeShop.Models.Product
@{
ViewBag.Title = Model.Name;
}

<div class="row">
    <div class="col">
        <div class="product-image" style="height: 400px;">
            <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 100%; max-height: 100%;" />
        </div>
    </div>
    <div class="col">
        <h1>@Model.Name</h1>
        <p><strong>Brand:</strong> @Model.Brand</p>
        <p><strong>Category:</strong> @Model.Category</p>
        <p><strong>Color:</strong> @Model.Color</p>
        <p><strong>Size:</strong> @Model.Size</p>
        <p><strong>In Stock:</strong> @(Model.InStock ? "yes" : "no")</p>
        <h2 class="product-price">@Model.Price.ToString("C")</h2>
        <p>@Model.Description</p>

        @if (Model.InStock)
        {
        using (Html.BeginForm("AddToCart", "Home", new {Id = Model.Id}, FormMethod.Post))
        {
            <div class="form-group">
                <label for="quantity">Quantity:</label>
                <input type="number" name="quantity" id="quantity" value="1" min="1" class="form-control" style="width: 100px;" />
            </div>
            <input type="hidden" name="id" value="@Model.Id" />
            
            <button type="submit" class="btn btn-success">Add to cart</button>
        }
        }
        else
        {
        <p>NO</p>
        }

        <div class="mt-3">
            <a href="@Url.Action("Products")" class="btn btn-primary">Back to catalog</a>
        </div>
    </div>
</div>