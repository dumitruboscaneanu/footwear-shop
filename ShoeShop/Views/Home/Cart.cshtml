@model ShoeShop.Models.CartItem
@{
ViewBag.Title = "Cart";
}

<h1>Cart</h1>

@if (Model == null)
{
<div class="card">
    <div class="card-body">
        <p>Your Cart is empty.</p>
        <a href="@Url.Action("Products")" class="btn btn-primary">To Catalog</a>
    </div>
</div>
}
else
{
<table>
    <thead>
    <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
   
    <tr>
        <td>
            <div style="display: flex; align-items: center;">
                <div style="width: 50px; height: 50px; margin-right: 10px;">
                    <img src="@Model.ImageUrl" alt="@Model.ProductName" style="max-width: 100%; max-height: 100%;" />
                </div>
                <span>@Model.ProductName</span>
            </div>
        </td>
        <td>@Model.Price.ToString("C")</td>
        <td>
            @using (Html.BeginForm("UpdateCart", "Home", FormMethod.Post))
            {
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="number" name="quantity" value="@Model.Quantity" min="1" style="width: 60px;" />
            <button type="submit" class="btn btn-primary">Update</button>
            }
        </td>
        <td>@((Model.Price * Model.Quantity).ToString("C"))</td>
        <td>
            @using (Html.BeginForm("RemoveFromCart", "Home", FormMethod.Post))
            {
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            }
        </td>
    </tr>
    
    </tbody>
    <tfoot>
    <tr>
        <td colspan="3" style="text-align: right;"><strong>Total:</strong></td>
        <td><strong>@Model.Price</strong></td>
        <td></td>
    </tr>
    </tfoot>
</table>

<div class="mt-3">
    <a href="@Url.Action("Products")" class="btn btn-primary">Continue shopping</a>
    
    @using (Html.BeginForm("Checkout", "Home", FormMethod.Post))
    {
        <input type="hidden" name="totalPrice" value="@Model.Price" />
        <button type="submit" class="btn btn-success">Checkout</button>
    }
</div>
}